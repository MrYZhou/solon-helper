{
  "name": "solon-helper",
  "displayName": "Solon Helper",
  "description": "%description%",
  "version": "1.25.31",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "Maven",
    "Java"
  ],
  "publisher": "larry",
  "repository": {
    "type": "git",
    "url": "https://github.com/MrYZhou/solon-helper"
  },
  "bugs": {
    "url": "https://github.com/MrYZhou/solon-helper/issues"
  },
  "homepage": "https://github.com/MrYZhou/solon-helper",
  "preview": false,
  "icon": "favicon.ico",
  "activationEvents": [
    "workspaceContains:**/app.yml",
    "workspaceContains:**/app.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "solon.initSolonProject",
        "title": "%solon.createProject%",
        "category": "Solon"
      }
    ],
    "keybindings": [
      {
        "key": "alt+shift+s",
        "command": "solon.initSolonProject"
      }
    ],
    "configuration": {
      "properties": {
        "solon-helper.customPath": {
          "type": "object",
          "markdownDescription": "自定义快捷创建路径",
          "patternProperties": {
            "^[a-zA-Z|a-zA-Z0-9|一-龥]*$": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "build": "vsce package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/iconv-lite": "^0.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.11",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "adm-zip": "^0.5.14",
    "iconv-lite": "^0.6.3",
    "js-yaml": "^4.1.0",
    "node-fetch": "^2.7.0"
  }
}

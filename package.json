{
  "name": "solon-helper",
  "displayName": "Solon Helper",
  "description": "vscode的solon插件( vscode plugin for solon )",
  "version": "1.24.82",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "Maven",
    "Java"
  ],
  "publisher": "larry",
  "repository": {
    "type": "git",
    "url": "https://github.com/MrYZhou/solon-helper.git"
  },
  "icon": "favicon.ico",
  "activationEvents": [
    "workspaceContains:**/app.yml",
    "workspaceContains:**/app.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "solon.initSolonProject",
        "title": "%solon.createProject%",
        "category": "Solon"
      }
    ],
    "keybindings": [
      {
        "key": "alt+shift+s",
        "command": "solon.initSolonProject"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "adm-zip": "^0.5.14",
    "js-yaml": "^4.1.0",
    "node-fetch": "^2.7.0"
  }
}
